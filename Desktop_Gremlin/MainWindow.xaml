<Window x:Class="Desktop_Gremlin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Gremlin"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Canvas MouseLeftButtonDown="Canvas_MouseLeftButtonDown" >
        <Image Name="SpriteImage"
           Width="80" Height="80"
           Canvas.Left="10"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"/>
    </Canvas>
</Window>
